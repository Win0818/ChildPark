<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <include layout="@layout/lovebeam_top_bar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="80dp"
        android:text="系统设置"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/display_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal" >
		
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画面设置: "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/eyeshield_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="护眼模式"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/standard_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="标准模式"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/hd_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="高清模式"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/desktop_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="235dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桌面设置: "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/child_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="儿童模式"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/patriarch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="家长模式"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/password_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
        	android:focusableInTouchMode="true"
        	android:focusable="true"
            android:background="@drawable/selector_version_backbutton"
            android:text="密码管理"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/wifi_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="290dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIFI设置: "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/wifi_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="开"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/wifi_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="关"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/bluetooth_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="345dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙设置: "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/bluetooth_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="开"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/bluetooth_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="关"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/time_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间日期: "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/time_auto_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="自动设置"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/time_manual_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="手动设置"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/starting_up_sound_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="455dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开机声音: "
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/starting_up_sound_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="开"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/starting_up_sound_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="关"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </RadioGroup>


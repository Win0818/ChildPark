<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:layout_width="@dimen/input_password_layout_width"
        android:layout_height="@dimen/input_password_layout_height"
        android:layout_centerInParent="true"
        android:background="@drawable/enter_password_bg" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingTop="50dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/input_password_text"
                android:textColor="#2A1806"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/chinese_edittext_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/login_account_hint_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="#EFEBEB"
                android:textSize="28sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dip"
            android:baselineAligned="false" >

            <Button
                android:id="@+id/password_enter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginRight="100dip"
                android:background="@null"
                android:text="@string/enter_text"
                android:textSize="@dimen/input_password_textsize" />

            <Button
                android:id="@+id/password_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="100dip"
                android:background="@null"
                android:text="@string/cancel_text"
                android:textSize="@dimen/input_password_textsize" />
        </RelativeLayout>

        <Button
            android:id="@+id/modify_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_alignRight="@+id/linearLayout1"
            android:background="@null"
            android:text="@string/forget_password_text"
            android:textColor="#262FFC"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>
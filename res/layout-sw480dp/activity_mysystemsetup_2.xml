<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <include layout="@layout/lovebeam_top_bar" />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/system_settig_bg">
        
         <RadioGroup
	        android:id="@+id/display_setting"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="170dp"
        	android:layout_marginLeft="270dp"
	        android:orientation="horizontal" >

	        <RadioButton
	            android:id="@+id/eyeshield_mode"
	            android:layout_width="36dp"
	            android:layout_height="36dp"
	            android:layout_marginLeft="4dp"
	            android:background="@drawable/selector_radio_button"
	            android:button="@null"/>
	        <RadioButton
	            android:id="@+id/standard_mode"
	            android:layout_width="36dp"
	            android:layout_height="36dp"
	            android:layout_marginLeft="78dp"
	            android:background="@drawable/selector_radio_button"
	            android:button="@null" />

	        <RadioButton
	            android:id="@+id/hd_mode"
	            android:layout_width="36dp"
	            android:layout_height="36dp"
	            android:layout_marginLeft="74dp"
	            android:background="@drawable/selector_radio_button"
	            android:button="@null"/>
    	</RadioGroup>

         <LinearLayout
             android:id="@+id/desktop_setting"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="260dp"
             android:layout_marginTop="15dp"
             android:orientation="horizontal" >

             <ImageView
                 android:id="@+id/app_manager"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:background="@drawable/selector_app_manager"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
                 android:gravity="center"
                  />

             <ImageView
                 android:id="@+id/patriarch_mode"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:background="@drawable/selector_parents_modle"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
                 android:gravity="center"
                 android:textSize="40sp" />

             <ImageView
                 android:id="@+id/password_manager"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:background="@drawable/selector_password_manager"
                 android:focusable="true"
                 android:focusableInTouchMode="true"
                 android:gravity="center"
                 android:textSize="40sp" />
         </LinearLayout>
         
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="65dp"
             android:layout_marginLeft="100dp"
             android:orientation="horizontal" >
             
             <ImageView
                 android:id="@+id/start_sound_imageview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:background="@drawable/close"
                 android:gravity="center"
                  />

             <ImageView
                 android:id="@+id/wifi_imageview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="32dp"
                 android:background="@drawable/close"
                 android:gravity="center"
                 android:textColor="@color/black"
                 />

             <ImageView
                 android:id="@+id/bluetooth_imageview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="35dp"
                 android:background="@drawable/close"
                 android:gravity="center"
                  />
         </LinearLayout>
          
         <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="120dp"
             android:orientation="horizontal" >
             
		       <CheckBox
		            android:id="@+id/start_sound_switch"
		            android:layout_width="38dp"
		            android:layout_height="38dp"
		            android:layout_marginLeft="60dp"
		            android:background="@drawable/selector_checkbox_button"
	            	android:button="@null" />
		        <CheckBox
		            android:id="@+id/wifi_switch"
		            android:layout_width="38dp"
		            android:layout_height="38dp"
		            android:layout_marginLeft="145dp"
		            android:background="@drawable/selector_checkbox_button"
	            	android:button="@null" />
	
		        <CheckBox
		            android:id="@+id/bluetooth_switch"
		            android:layout_width="38dp"
		            android:layout_height="38dp"
		            android:layout_marginLeft="145dp"
		            android:background="@drawable/selector_checkbox_button"
	            	android:button="@null" />
         </LinearLayout>
         
         <ImageView 
             android:id="@+id/enter_system_setting"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:focusable="true"
             android:layout_gravity="center"
             android:focusableInTouchMode="true"
             android:background="@drawable/selector_more_setting"/>

    </LinearLayout>
    <Button
       android:id="@+id/system_setting_backbtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="600dp"
       android:focusableInTouchMode="true"
       android:focusable="true"
       android:background="@drawable/selector_version_backbutton"
       />
</RelativeLayout>

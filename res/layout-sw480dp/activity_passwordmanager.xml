<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >
    
     <include layout="@layout/lovebeam_top_bar" />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="80dp"
        android:text="修改密码"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold" />
     
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal" >
         
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/original_password"
            android:textColor="#000000"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/original_manager_password"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:background="@drawable/chinese_edittext_bg"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:singleLine="true" />
     </LinearLayout>
     
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="235dp"
        android:orientation="horizontal" >
         
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/default_password"
            android:textColor="#000000"
            android:textSize="40sp" />

         <EditText
            android:id="@+id/change_manager_password"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:background="@drawable/chinese_edittext_bg"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:singleLine="true" />
     </LinearLayout>
     
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="290dp"
        android:orientation="horizontal" >
         
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/confirm_password"
            android:textColor="#000000"
            android:textSize="40sp" />

         <EditText
            android:id="@+id/update_manager_password"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:background="@drawable/chinese_edittext_bg"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:singleLine="true" />
     </LinearLayout>
     
      <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="232dp"
        android:layout_marginTop="385dp"
        android:orientation="horizontal" >
         
           <Button
		        android:id="@+id/system_setting_confirm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:focusableInTouchMode="true"
		        android:focusable="true"
		        android:background="@drawable/selector_version_backbutton"
		        android:text="@string/version_info_back_btn"
		        android:textColor="@color/black"
		        android:textSize="50sp" />
           
           <Button
		        android:id="@+id/system_setting_backbtn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="62dp"
		        android:focusableInTouchMode="true"
		        android:focusable="true"
		        android:background="@drawable/selector_version_backbutton"
		        android:text="@string/version_info_back_btn"
		        android:textColor="@color/black"
		        android:textSize="50sp" />
      </LinearLayout>
     
</RelativeLayout>

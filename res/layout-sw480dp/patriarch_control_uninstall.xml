<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="407dp"
    android:layout_height="225dp"
    android:layout_gravity="center"
    android:background="@drawable/parent_model_bg" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/delete_app"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/uninstall_cancel"
            android:layout_width="132dp"
            android:layout_height="69dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/parent_model_cancel_style"
            android:soundEffectsEnabled="false" />

        <TextView
            android:id="@+id/uninstall_confirm"
            android:layout_width="132dp"
            android:layout_height="69dp"
            android:layout_marginLeft="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/parent_model_confirm_style"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

</RelativeLayout>
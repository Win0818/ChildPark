<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="@drawable/parent_model_bg" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/delete_app_title"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/uninstall_cancel"
            android:layout_width="142dp"
            android:layout_height="79dp"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/delete_app"
            android:background="@drawable/selector_version_backbutton"
            android:soundEffectsEnabled="false" />

        <TextView
            android:id="@+id/uninstall_confirm"
            android:layout_width="142dp"
            android:layout_height="79dp"
            android:layout_marginLeft="40dp"
            android:textSize="30sp"
            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_to_child_app"
            android:background="@drawable/selector_version_backbutton"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

</RelativeLayout>
